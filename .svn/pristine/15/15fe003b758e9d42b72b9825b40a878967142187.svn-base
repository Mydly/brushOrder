$themeColor:#398DEE;

html,ul
{
  margin:0;
  padding:0;
  box-sizing:border-box;
}

.navMenuBody {
  position:relative;
  left:0;
  top:0;
}

.text_theme_color {
  color:$themeColor !important;
}

.contentBody{
  float:left;
  position: absolute;
  left: 180px;
  top:0;
  color:gray;
}

.loginContainar{
  text-align:center;
  margin:2rem 3rem;
}

.noneSelect{
  -webkit-user-select:none;
}

.alertDiv {
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
}


.userInfoContent{
  position:relative;
  text-align:center;
  margin:2rem 3rem;
  width:180px;
  z-index:999;
  &:hover .userInfoBtn{
    display:block;
  }
}

.userInfoBtn{
  list-style:none;
  display:none;
}



