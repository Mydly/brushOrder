import React from 'react';
import {Nav,NavItem} from 'react-bootstrap';
import CONSTS from '../../config/consts';
import Caichan from '../finan/Caichan';
import Charge from '../finan/Charge';
import CoinIn from '../finan/CoinIn';
import CoinOut from '../finan/CoinOut';
import TradeLog from '../finan/TradeLog';
import Weituo from '../finan/Weituo';
import Withdraw from '../finan/Withdraw';

class Finan extends React.Component {


    constructor(props) {
        super(props);

        this.__clickItem = this.__clickItem.bind(this);
        //this.__changeTradeArea = this.__changeTradeArea.bind(this);

        this.state = {
            itemIndex:CONSTS.pageKey.finan[0].key
        }

    }

    __clickItem(index,e){
        console.log(index);
        this.setState({
           itemIndex: index
        });
    }

    render() {
        //const { dispatch, visibleTodos, visibilityFilter } = this.props;
        console.log('finan render');


        const style = {
            display: 'inline-block',
            margin: '16px 32px 16px 0',
        };

        let mentlist = CONSTS.pageKey.finan.map(
            (it)=>{
                return <NavItem key={it.key} eventKey={it.key}>{it.title}</NavItem>
            }
        );

        let menu = <Nav  style={{'width':'160px',backgroundColor:'#4f94e7'}}
                         activeKey={this.state.itemIndex}
                         onSelect={this.__clickItem}>
            {mentlist}
            </Nav>;


        let content = null;
        switch (this.state.itemIndex){
            case CONSTS.pageKey.finan[0].key:
                content = <Caichan />;
                break;
            case CONSTS.pageKey.finan[1].key:
                content = <Charge />;
                break;
            case CONSTS.pageKey.finan[2].key:
                content = <Withdraw />;
                break;
            case CONSTS.pageKey.finan[3].key:
                content = <CoinIn />;
                break;
            case CONSTS.pageKey.finan[4].key:
                content = <CoinOut />;
                break;
            case CONSTS.pageKey.finan[5].key:
                content = <Weituo />;
                break;
            case CONSTS.pageKey.finan[6].key:
                content = <TradeLog />;
                break;
        }

        return (
            <div>
                {menu}
                {content}
            </div>
        );
    }
}

export default Finan;