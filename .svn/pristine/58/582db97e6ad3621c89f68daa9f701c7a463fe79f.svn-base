import React, { Component, PropTypes } from 'react';

import '../../static/style/move.scss';

class ListButton extends Component {
    constructor(props) {
        super(props);
    }

    render(){
        console.log(this.props);
        return <div className="listItemButton"
                  onClick={this.props.onclick}
        >{this.props.title}
        </div>;
    }
}


class ListItem extends Component {
    constructor(props) {
        super(props);
    }

    render(){

        console.log(this.props);
        let data = <div className="listItemValue">{this.props.dataValue}</div>;
        if(this.props.type == "input") data = <input className="listItemInput"/>;
        if(this.props.type == "select")
        {
            data = this.props.dataValue.map(
                (item) =>
                    <option>{item}</option>
            );
            data = <select className="listItemSelect">{data}</select>;
        }

        if(this.props.type == "button")
            return <ListButton
                title="立即充值"
                onclick={this.props.onclick}
            />;

        return (
            <div className="listItemContainer">
                <div className="listItemTitle">{this.props.title}</div>
                {data}
            </div>
        );
    }
}

export default ListItem;