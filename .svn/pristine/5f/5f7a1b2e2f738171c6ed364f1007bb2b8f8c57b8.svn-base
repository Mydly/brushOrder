@import "common";

$navHeight :40px;
$activeBorderColor :#87DBAE;


.NavMenu{
  height:$navHeight;
  line-height:$navHeight;
  display:flex;
  justify-content:space-between;
  .menu,.login{
    padding-left:10px;
    padding-right:10px;
    float:left;
    display:flex;
    align-items:center;
    div{
      padding:10px 10px;
      font-size:18px;
      font-weight:500;
      &:hover{
        color:$themeColor;
      }
      
      &.active{
        color:$themeColor;
      }
    }
  }
}




.topNavContent {
  height:$navHeight;
  background-color:$themeColor;
}

.topNavList {
  list-style:none;
  display:flex;
}

.topNavlistItem{
  margin: 0 22px;
  color:white;
  line-height:60px;
  cursor:pointer;
   &:hover {
     border-bottom-width:5px;
     border-bottom-color:$activeBorderColor;
   }

  &.active{
    border-bottom-width:5px;
    border-bottom-color:$activeBorderColor;
  }
}