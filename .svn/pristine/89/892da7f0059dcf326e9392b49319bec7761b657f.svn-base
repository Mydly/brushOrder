@import "common";

$navHeight :60px;
$activeBorderColor :#87DBAE;

.NavMenu{
  position:absolute;
}

.topNavContent {
  height:$navHeight;
  background-color:$themeColor;
}

.topNavList {
  list-style:none;
  display:flex;
}

.topNavlistItem{
  margin: 0 22px;
  color:white;
  line-height:60px;
  cursor:pointer;
   &:hover {
     border-bottom-width:5px;
     border-bottom-color:$activeBorderColor;
   }

  &.active{
    border-bottom-width:5px;
    border-bottom-color:$activeBorderColor;
  }
}