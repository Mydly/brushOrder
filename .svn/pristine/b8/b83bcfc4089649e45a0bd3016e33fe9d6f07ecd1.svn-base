$themeColor:#398DEE;

html,ul
{
  margin:0;
  padding:0;
  box-sizing:border-box;
}

.navMenuBody {
  position:relative;
  left:0;
  top:0;
}

.text_theme_color {
  color:$themeColor !important;
}

.contentBody{
  float:left;
  position: absolute;
  left: 180px;
  top:0;
  color:gray;
}

.loginContainar{
  text-align:center;
  margin:2rem 3rem;
}
.box{
  width:1000px;
}
.issueList ul{
  width:1100px;
  li{
    .icon{
      margin:0px 35px;
      width:50px;
      height:50px;
    }
    div{
      line-height:25px;
    }
    cursor: pointer;
    width:120px;
    text-align:center;
    height:50px;
    vertical-align: middle;
    line-height:50px;
    display:inline-block;
  }
}
.tab{
  th{
    text-align:center;
  }
  width:1200px;
  text-align:center;
}
.red{
  color:red !important;
}
.green{
  color:green !important;
}