@import "common";


.listItemContainer{
  display:flex;
  flex-direction:row;
}

.listItemTitle{
  font-size:14px;
  line-height:30px;
  margin:10px 5px;
}

.listItemValue{
  font-size:14px;
  line-height:30px;
  margin:10px 5px;
}

.listItemSelect,.listItemInput{
  font-size:14px;
  line-height:30px;
  height:30px;
  width:160px;
  margin:10px 5px;

  option{
  text-align:center;
  }

}

.listItemButton{
  background-color:$themeColor;
  color:#FFF;
  margin:10px 5px;
  line-height:30px;
  font-size:14px;
  border-radius:3px;
  width:160px;
  text-align:center;
  margin-left:40px;
}